<!DOCTYPE html>
<html>
  <head>
    <title>Grapple Demos</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'codemirror_initializer', 'data-turbolinks-track' => true %>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    <%= yield(:page_head) %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <!--div class="header">
		<%#= link_to "Grapple Demos", home_path %>
	</div-->
    <nav class="navbar navbar-default navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <span><%= link_to "Grapple Demos", home_path, class: "navbar-brand" %></span>
        </div>
        <div id="navbar" class="navbar-collapse collapse navbar-right">
          <ul class="nav navbar-nav">
            <li><a href="#">HTML Table</a></li>
            <li class="dropdown">
              <a href="#data-grid" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Data Grid <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Sorting", sorting_index_path %></li>
                <li><%= link_to "Searching", search_index_path %></li>
                <li><%= link_to "Pagination", pagination_index_path %></li>
              </ul>
            </li>
            <!--/data-grid -->
            <li class="dropdown">
              <a href="#data-grid" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Ajax <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "AJAX", ajax_index_path %></li>
                <li><%= link_to "AJAX w/History", ajax_history_index_path %></li>
              </ul>
            </li>
            <!--/ajax -->
            <li><%= link_to 'Everything', controller: 'articles' %></li>
          </ul>
        </div>
        <!--/.nav-collapse -->
      </div>
    </nav>
    <div class="container-fluid">
      <%= yield %>
    </div>
  </body>
</html>

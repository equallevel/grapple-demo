<% 
	columns = [
		{ label: 'X' },
		{ label: :title, sort: 'title' },
		{ label: :contents, sort: 'text' },
		{ label: :created_at, sort: 'created_at' }
	]
	
%>
<%= table_for(columns, @articles) do |t| %>
	<%= t.colgroup %>
	<%= t.header  %>
		
	<%# end %>
	<%= t.footer %>
	<%= t.body do |article| %>
		<td></td>
		<td><%= article.title %></td>
		<td></td>
		<td></td>
	<% end %>
<% end %>

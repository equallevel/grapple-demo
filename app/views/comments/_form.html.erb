<%= form_for ([@article, @article.comments.build]) do |f| %>

  <div class="form-group">
    <%= f.label 'Name' %><br>
    <%= f.text_field :commenter, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label 'Comment' %><br>
    <%= f.text_area :body, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
  </div>

<% end %>